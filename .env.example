# Authentication token for MCP server requests
MCP_TOKEN=dev

# Local SQLite fallback (tests only)
MCP_DB_PATH=data/mcp.db

# Postgres (Docker Compose defaults)
POSTGRES_DB=neural_forge
POSTGRES_USER=forge
POSTGRES_PASSWORD=forge

# Async SQLAlchemy URL for Postgres (server will pick this up automatically)
# Note: inside Docker Compose, host is 'postgres'; locally use 'localhost'
DATABASE_URL=postgresql+asyncpg://forge:forge@postgres:5432/neural_forge

# Server settings (dev localhost; compose maps 8081->8080 in container)
HOST=127.0.0.1
PORT=8081
